# =============================================================================
# API SERVICE ENVIRONMENT VARIABLES (Local Development)
# =============================================================================
# This file is for local development only (when running API outside Docker)
# For production deployment, use the root .env file with docker-compose
# =============================================================================

# Database connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://svazapp:your_password@localhost:5432/svazapp

# Node environment (development, production, test)
NODE_ENV=development

# API server port
API_PORT=8080

# JWT secret for authentication (min 32 characters)
JWT_SECRET=change_this_to_a_very_long_random_string_min_32_chars

# JWT token expiration time (e.g., 7d, 30d, 90d)
JWT_EXPIRES_IN=7d

# CORS origin (allowed frontend URL)
CORS_ORIGIN=http://localhost:3000

# LiveKit API credentials
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=change_this_to_a_very_long_random_secret

# LiveKit server URL (WebSocket)
LIVEKIT_URL=ws://localhost:7880

# Logging level (debug, info, warn, error)
LOG_LEVEL=debug

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

